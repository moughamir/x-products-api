{
    "openapi": "3.0.0",
    "info": {
        "title": "Cosmos Product API",
        "description": "The final source for product data, search, and images. Authentication requires an **X-API-KEY** header.",
        "license": {
            "name": "MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/cosmos",
            "description": "API Base Path"
        }
    ],
    "paths": {
        "/products": {
            "get": {
                "summary": "Retrieves a paginated list of all products (limited fields).",
                "operationId": "ebf98fb1649a71cdb9555c7e519c77e0",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "50",
                            "maximum": "100"
                        }
                    },
                    {
                        "name": "fields",
                        "in": "query",
                        "description": "Comma-separated list of fields to return (e.g., id,title,price). Default is all fields.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "*"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A paginated list of products.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductList"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
        "/products/{key}": {
            "get": {
                "summary": "Retrieves a single product by ID or handle.",
                "operationId": "ef5c34221cb61f3e4af920b46ae69ffe",
                "parameters": [
                    {
                        "name": "key",
                        "in": "path",
                        "description": "Product ID (int) or Handle (string)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "example-product"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The full product object.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found."
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
        "/products/search": {
            "get": {
                "summary": "Performs a full-text search across product titles and descriptions.",
                "operationId": "f214d46b436d38881fa4da308d73bf87",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Search query string.",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "blue shirt"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "50",
                            "maximum": "100"
                        }
                    },
                    {
                        "name": "fields",
                        "in": "query",
                        "description": "Comma-separated list of fields to return.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "*"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A paginated list of products matching the query.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductList"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
        "/collections/{handle}": {
            "get": {
                "summary": "Retrieves a list of products by collection handle.",
                "operationId": "3b69a6d1270f491d0a73d4fccb42db60",
                "parameters": [
                    {
                        "name": "handle",
                        "in": "path",
                        "description": "Collection handle (e.g., all, featured, sale)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "featured"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "50",
                            "maximum": "100"
                        }
                    },
                    {
                        "name": "fields",
                        "in": "query",
                        "description": "Comma-separated list of fields to return.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "*"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of products belonging to the collection.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductList"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Collection handle is not supported."
                    }
                }
            }
        },
        "/cdn/{path:.*}": {
            "get": {
                "summary": "Reverse proxy for external images (CDN).",
                "description": "Streams an image from the configured external CDN (`https://cdn.shopify.com`) via this domain.",
                "operationId": "7c30a51afc444fa63320867fa4719525",
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "description": "The path to the image on the external CDN.",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "s/files/1/0000/0000/products/image.jpg"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The streamed image content."
                    },
                    "400": {
                        "description": "Invalid image domain."
                    },
                    "404": {
                        "description": "Image not found."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Image": {
                "title": "Image",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "9876"
                    },
                    "product_id": {
                        "type": "string",
                        "example": "12345"
                    },
                    "position": {
                        "type": "integer",
                        "example": 1
                    },
                    "src": {
                        "type": "string",
                        "format": "url",
                        "example": "http://example.com/image.jpg"
                    },
                    "width": {
                        "type": "integer",
                        "example": 1000
                    },
                    "height": {
                        "type": "integer",
                        "example": 1000
                    },
                    "alt": {
                        "type": "string",
                        "example": "Blue t-shirt",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "variant_ids": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            },
            "Product": {
                "title": "Product",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "12345"
                    },
                    "title": {
                        "type": "string",
                        "example": "Example Product"
                    },
                    "handle": {
                        "type": "string",
                        "example": "example-product"
                    },
                    "body_html": {
                        "type": "string",
                        "example": "<div>A full description.</div>"
                    },
                    "vendor": {
                        "type": "string",
                        "example": "Vendor Co."
                    },
                    "product_type": {
                        "type": "string",
                        "example": "T-Shirt"
                    },
                    "tags": {
                        "type": "string",
                        "example": "tag1,tag2"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 19.99
                    },
                    "compare_at_price": {
                        "type": "number",
                        "format": "float",
                        "example": 25,
                        "nullable": true
                    },
                    "in_stock": {
                        "type": "boolean",
                        "example": true
                    },
                    "rating": {
                        "type": "number",
                        "format": "float",
                        "example": 4.5,
                        "nullable": true
                    },
                    "review_count": {
                        "type": "integer",
                        "example": 42,
                        "nullable": true
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 10,
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "variants": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ProductVariant"
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ProductOption"
                        }
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Image"
                        }
                    }
                },
                "type": "object"
            },
            "ProductVariant": {
                "title": "ProductVariant",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "98765"
                    },
                    "product_id": {
                        "type": "string",
                        "example": "12345"
                    },
                    "title": {
                        "type": "string",
                        "example": "Small / Blue"
                    },
                    "option1": {
                        "type": "string",
                        "example": "Small",
                        "nullable": true
                    },
                    "option2": {
                        "type": "string",
                        "example": "Blue",
                        "nullable": true
                    },
                    "option3": {
                        "type": "string",
                        "nullable": true
                    },
                    "sku": {
                        "type": "string",
                        "example": "PROD-SM-BLU",
                        "nullable": true
                    },
                    "requires_shipping": {
                        "type": "boolean",
                        "example": true
                    },
                    "taxable": {
                        "type": "boolean",
                        "example": true
                    },
                    "featured_image": {
                        "type": "string",
                        "example": "http://example.com/variant-image.jpg",
                        "nullable": true
                    },
                    "available": {
                        "type": "boolean",
                        "example": true
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 19.99
                    },
                    "grams": {
                        "type": "integer",
                        "example": 200
                    },
                    "compare_at_price": {
                        "type": "number",
                        "format": "float",
                        "example": 25,
                        "nullable": true
                    },
                    "position": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "ProductOption": {
                "title": "ProductOption",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "54321"
                    },
                    "product_id": {
                        "type": "string",
                        "example": "12345"
                    },
                    "name": {
                        "type": "string",
                        "example": "Size"
                    },
                    "position": {
                        "type": "integer",
                        "example": 1
                    },
                    "values": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            },
            "ProductList": {
                "title": "ProductList",
                "properties": {
                    "products": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Product"
                        }
                    },
                    "meta": {
                        "properties": {
                            "total": {
                                "type": "integer",
                                "example": 100
                            },
                            "page": {
                                "type": "integer",
                                "example": 1
                            },
                            "limit": {
                                "type": "integer",
                                "example": 50
                            },
                            "total_pages": {
                                "type": "integer",
                                "example": 2
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "name": "X-API-KEY",
                "in": "header"
            }
        }
    }
}