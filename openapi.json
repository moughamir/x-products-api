{
    "openapi": "3.0.0",
    "info": {
        "title": "Cosmos Product API",
        "description": "The final source for product data, search, and images. Authentication requires an **X-API-KEY** header.",
        "license": {
            "name": "MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/cosmos",
            "description": "API Base Path"
        }
    ],
    "paths": {
        "/products": {
            "get": {
                "summary": "Retrieves a paginated list of all products (limited fields).",
                "operationId": "ebf98fb1649a71cdb9555c7e519c77e0",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "50"
                        }
                    },
                    {
                        "name": "fields",
                        "in": "query",
                        "description": "Comma-separated fields to return (e.g., id,title,price). '*' for all fields.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "*"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "Output format.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of products with pagination metadata.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductList"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
        "/products/{key}": {
            "get": {
                "summary": "Retrieves a single product by ID or handle.",
                "operationId": "ef5c34221cb61f3e4af920b46ae69ffe",
                "parameters": [
                    {
                        "name": "key",
                        "in": "path",
                        "description": "Product ID (int) or handle (string).",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "Output format.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A single product object, including all variants, images, and options.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found."
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
        "/products/search": {
            "get": {
                "summary": "Performs a full-text search across products.",
                "operationId": "f214d46b436d38881fa4da308d73bf87",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "The search query string.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "50"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "Output format.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A paginated list of products matching the search query.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductList"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ]
            }
        },
        "/collections/{handle}": {
            "get": {
                "summary": "Retrieves products for a specific collection handle (e.g., featured, sale).",
                "operationId": "3b69a6d1270f491d0a73d4fccb42db60",
                "parameters": [
                    {
                        "name": "handle",
                        "in": "path",
                        "description": "The collection handle (e.g., 'all', 'featured', 'sale').",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": "50"
                        }
                    },
                    {
                        "name": "fields",
                        "in": "query",
                        "description": "Comma-separated fields to return (e.g., id,title,price). '*' for all fields.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "*"
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "Output format.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "json",
                            "enum": [
                                "json",
                                "msgpack"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A paginated list of products in the specified collection.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductList"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Collection handle is not supported."
                    }
                }
            }
        },
        "/cdn/{path}": {
            "get": {
                "summary": "Reverse proxy for external images.",
                "description": "Proxies images from the external CDN (e.g., cdn.shopify.com).",
                "operationId": "24af4d477e38177a28c26899339fabc1",
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "description": "The URL path segment of the image to fetch.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Image streamed successfully.",
                        "content": {
                            "image/*": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Image not found."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Image": {
                "title": "Image",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 9876
                    },
                    "product_id": {
                        "type": "integer",
                        "example": 12345
                    },
                    "position": {
                        "type": "integer",
                        "example": 1
                    },
                    "src": {
                        "type": "string",
                        "format": "url",
                        "example": "http://example.com/image.jpg"
                    },
                    "width": {
                        "type": "integer",
                        "example": 1000
                    },
                    "height": {
                        "type": "integer",
                        "example": 1000
                    }
                },
                "type": "object"
            },
            "Product": {
                "title": "Product",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 12345
                    },
                    "title": {
                        "type": "string",
                        "example": "Example Product"
                    },
                    "handle": {
                        "type": "string",
                        "example": "example-product"
                    },
                    "body_html": {
                        "type": "string",
                        "example": "<div>A full description.</div>"
                    },
                    "vendor": {
                        "type": "string",
                        "example": "Vendor Co."
                    },
                    "product_type": {
                        "type": "string",
                        "example": "T-Shirt"
                    },
                    "tags": {
                        "type": "string",
                        "example": "tag1,tag2"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 19.99
                    },
                    "compare_at_price": {
                        "type": "number",
                        "format": "float",
                        "example": 25,
                        "nullable": true
                    },
                    "variants": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Image"
                        }
                    }
                },
                "type": "object"
            },
            "ProductList": {
                "title": "ProductList",
                "properties": {
                    "products": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Product"
                        }
                    },
                    "meta": {
                        "properties": {
                            "total": {
                                "type": "integer",
                                "example": 100
                            },
                            "page": {
                                "type": "integer",
                                "example": 1
                            },
                            "limit": {
                                "type": "integer",
                                "example": 50
                            },
                            "total_pages": {
                                "type": "integer",
                                "example": 2
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "name": "X-API-KEY",
                "in": "header"
            }
        }
    }
}