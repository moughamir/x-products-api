{% extends 'admin/layout/base.html.twig' %}

{% block title %}Products{% endblock %}
{% block page_title %}Products{% endblock %}

{% block content %}
<div class="p-6">
    <!-- Success/Error Messages -->
    {% if success %}
    <div class="alert alert-success mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{{ success }}</span>
    </div>
    {% endif %}

    {% if error %}
    <div class="alert alert-error mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{{ error }}</span>
    </div>
    {% endif %}

    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-2xl font-bold">Products</h2>
            <p class="text-sm text-base-content/60">Manage your product catalog</p>
        </div>
        <a href="/cosmos/admin/products/new" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Product
        </a>
    </div>

    <!-- Filters -->
    <div class="card bg-base-100 shadow-md mb-6">
        <div class="card-body">
            <form method="GET" action="/cosmos/admin/products" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="form-control">
                    <label class="label"><span class="label-text">Search</span></label>
                    <input type="text" name="search" value="{{ filters.search }}" placeholder="Title, handle, vendor..." class="input input-bordered">
                </div>

                <div class="form-control">
                    <label class="label"><span class="label-text">Collection</span></label>
                    <select name="collection_id" class="select select-bordered">
                        <option value="">All Collections</option>
                        {% for collection in collections %}
                        <option value="{{ collection.id }}" {% if filters.collection_id == collection.id %}selected{% endif %}>
                            {{ collection.title }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-control">
                    <label class="label"><span class="label-text">Category</span></label>
                    <select name="category_id" class="select select-bordered">
                        <option value="">All Categories</option>
                        {% for category in categories %}
                        <option value="{{ category.id }}" {% if filters.category_id == category.id %}selected{% endif %}>
                            {{ category.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-control">
                    <label class="label"><span class="label-text">Stock Status</span></label>
                    <select name="in_stock" class="select select-bordered">
                        <option value="">All Products</option>
                        <option value="1" {% if filters.in_stock == 1 %}selected{% endif %}>In Stock</option>
                        <option value="0" {% if filters.in_stock == 0 %}selected{% endif %}>Out of Stock</option>
                    </select>
                </div>

                <div class="form-control">
                    <label class="label"><span class="label-text">Product Type</span></label>
                    <select name="product_type" class="select select-bordered">
                        <option value="">All Types</option>
                        {% for type in product_types %}
                        <option value="{{ type }}" {% if filters.product_type == type %}selected{% endif %}>{{ type }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-control">
                    <label class="label"><span class="label-text">Vendor</span></label>
                    <select name="vendor" class="select select-bordered">
                        <option value="">All Vendors</option>
                        {% for vendor in vendors %}
                        <option value="{{ vendor }}" {% if filters.vendor == vendor %}selected{% endif %}>{{ vendor }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-control md:col-span-2 flex flex-row gap-2 items-end">
                    <button type="submit" class="btn btn-primary flex-1">Apply Filters</button>
                    <a href="/cosmos/admin/products" class="btn btn-ghost flex-1">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card bg-base-100 shadow-md">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="checkbox" id="select-all">
                            </th>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Handle</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Vendor</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if products is empty %}
                        <tr>
                            <td colspan="9" class="text-center py-8 text-base-content/60">
                                No products found. <a href="/cosmos/admin/products/new" class="link link-primary">Create your first product</a>
                            </td>
                        </tr>
                        {% else %}
                        {% for product in products %}
                        <tr>
                            <td>
                                <input type="checkbox" class="checkbox product-checkbox" value="{{ product.id }}">
                            </td>
                            <td>{{ product.id }}</td>
                            <td>
                                <div class="font-medium">{{ product.title }}</div>
                            </td>
                            <td><code class="text-xs">{{ product.handle }}</code></td>
                            <td>
                                <div class="font-medium">${{ product.price|number_format(2) }}</div>
                                {% if product.compare_at_price %}
                                <div class="text-xs text-base-content/60 line-through">${{ product.compare_at_price|number_format(2) }}</div>
                                {% endif %}
                            </td>
                            <td>
                                {% if product.in_stock %}
                                <span class="badge badge-success badge-sm">In Stock</span>
                                {% else %}
                                <span class="badge badge-error badge-sm">Out of Stock</span>
                                {% endif %}
                            </td>
                            <td>{{ product.vendor ?? '-' }}</td>
                            <td>{{ product.product_type ?? '-' }}</td>
                            <td>
                                <div class="flex gap-2">
                                    <a href="/cosmos/admin/products/{{ product.id }}/edit" class="btn btn-sm btn-ghost">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <form method="POST" action="/cosmos/admin/products/{{ product.id }}/delete" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <button type="submit" class="btn btn-sm btn-ghost text-error">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <!-- Bulk Actions -->
            <div class="mt-4 flex gap-2" id="bulk-actions" style="display: none;">
                <form method="POST" action="/cosmos/admin/products/bulk-delete" onsubmit="return confirm('Are you sure you want to delete selected products?');">
                    <input type="hidden" name="product_ids" id="bulk-product-ids">
                    <button type="submit" class="btn btn-error btn-sm">Delete Selected</button>
                </form>
            </div>

            <!-- Pagination -->
            {% if total_pages > 1 %}
            <div class="flex justify-center mt-6">
                <div class="btn-group">
                    {% if page > 1 %}
                    <a href="?page={{ page - 1 }}&{{ filters|url_encode }}" class="btn btn-sm">«</a>
                    {% endif %}
                    
                    {% for p in 1..total_pages %}
                        {% if p == page %}
                        <button class="btn btn-sm btn-active">{{ p }}</button>
                        {% elseif p == 1 or p == total_pages or (p >= page - 2 and p <= page + 2) %}
                        <a href="?page={{ p }}&{{ filters|url_encode }}" class="btn btn-sm">{{ p }}</a>
                        {% elseif p == page - 3 or p == page + 3 %}
                        <button class="btn btn-sm btn-disabled">...</button>
                        {% endif %}
                    {% endfor %}
                    
                    {% if page < total_pages %}
                    <a href="?page={{ page + 1 }}&{{ filters|url_encode }}" class="btn btn-sm">»</a>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Stats -->
            <div class="text-center text-sm text-base-content/60 mt-4">
                Showing {{ products|length }} of {{ total_products }} products
            </div>
        </div>
    </div>
</div>

<script>
// Select all checkbox
document.getElementById('select-all')?.addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.product-checkbox');
    checkboxes.forEach(cb => cb.checked = this.checked);
    updateBulkActions();
});

// Individual checkboxes
document.querySelectorAll('.product-checkbox').forEach(cb => {
    cb.addEventListener('change', updateBulkActions);
});

function updateBulkActions() {
    const checked = Array.from(document.querySelectorAll('.product-checkbox:checked'));
    const bulkActions = document.getElementById('bulk-actions');
    const bulkIds = document.getElementById('bulk-product-ids');
    
    if (checked.length > 0) {
        bulkActions.style.display = 'flex';
        bulkIds.value = checked.map(cb => cb.value).join(',');
    } else {
        bulkActions.style.display = 'none';
    }
}
</script>
{% endblock %}

