{% extends 'admin/layout/base.html.twig' %}

{% block title %}Collections{% endblock %}
{% block page_title %}Collections{% endblock %}

{% block content %}
<div class="p-6">
    {% if success %}
    <div class="alert alert-success mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{{ success }}</span>
    </div>
    {% endif %}

    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-2xl font-bold">Collections</h2>
            <p class="text-sm text-base-content/60">Organize products into collections</p>
        </div>
        <a href="/cosmos/admin/collections/new" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Collection
        </a>
    </div>

    <div class="card bg-base-100 shadow-md">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Handle</th>
                            <th>Type</th>
                            <th>Products</th>
                            <th>Featured</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if collections is empty %}
                        <tr>
                            <td colspan="7" class="text-center py-8 text-base-content/60">
                                No collections found. <a href="/cosmos/admin/collections/new" class="link link-primary">Create your first collection</a>
                            </td>
                        </tr>
                        {% else %}
                        {% for collection in collections %}
                        <tr>
                            <td>{{ collection.id }}</td>
                            <td>
                                <div class="font-medium">{{ collection.title }}</div>
                                {% if collection.description %}
                                <div class="text-xs text-base-content/60">{{ collection.description|slice(0, 50) }}...</div>
                                {% endif %}
                            </td>
                            <td><code class="text-xs">{{ collection.handle }}</code></td>
                            <td>
                                {% if collection.is_smart %}
                                <span class="badge badge-info badge-sm">Smart</span>
                                {% else %}
                                <span class="badge badge-ghost badge-sm">Manual</span>
                                {% endif %}
                            </td>
                            <td>{{ collection.product_count ?? 0 }}</td>
                            <td>
                                {% if collection.is_featured %}
                                <span class="badge badge-success badge-sm">Yes</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="flex gap-2">
                                    {% if collection.is_smart %}
                                    <form method="POST" action="/cosmos/admin/collections/{{ collection.id }}/sync">
                                        <button type="submit" class="btn btn-sm btn-ghost" title="Sync products">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                            </svg>
                                        </button>
                                    </form>
                                    {% endif %}
                                    <a href="/cosmos/admin/collections/{{ collection.id }}/edit" class="btn btn-sm btn-ghost">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <form method="POST" action="/cosmos/admin/collections/{{ collection.id }}/delete" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-ghost text-error">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <div class="text-center text-sm text-base-content/60 mt-4">
                Showing {{ collections|length }} of {{ total_collections }} collections
            </div>
        </div>
    </div>
</div>
{% endblock %}

