{% extends 'admin/layout/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="p-6">
    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Dashboard</h1>
        <p class="text-base-content/60 mt-1">Welcome back, {{ user.full_name|default(user.username) }}!</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <!-- Total Products -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                </div>
                <div class="stat-title">Total Products</div>
                <div class="stat-value text-primary">{{ stats.total_products|number_format }}</div>
                <div class="stat-desc">
                    <span class="text-success">{{ stats.in_stock_products|number_format }}</span> in stock,
                    <span class="text-error">{{ stats.out_of_stock_products|number_format }}</span> out
                </div>
            </div>
        </div>

        <!-- Collections -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                </div>
                <div class="stat-title">Collections</div>
                <div class="stat-value text-secondary">{{ stats.total_collections|number_format }}</div>
                <div class="stat-desc">{{ stats.smart_collections|number_format }} smart collections</div>
            </div>
        </div>

        <!-- Categories & Tags -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-accent">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                </div>
                <div class="stat-title">Tags & Categories</div>
                <div class="stat-value text-accent">{{ stats.total_tags|number_format }}</div>
                <div class="stat-desc">{{ stats.total_categories|number_format }} categories</div>
            </div>
        </div>

        <!-- Active Users -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-info">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <div class="stat-title">Active Users</div>
                <div class="stat-value text-info">{{ stats.active_users|number_format }}</div>
                <div class="stat-desc">{{ stats.active_sessions|number_format }} active sessions</div>
            </div>
        </div>
    </div>

    <!-- Additional Statistics Row -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <!-- Average Price -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-title">Average Product Price</div>
                <div class="stat-value text-sm">${{ stats.avg_product_price|number_format(2) }}</div>
                <div class="stat-desc">Across all products</div>
            </div>
        </div>

        <!-- Product Images -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-title">Product Images</div>
                <div class="stat-value text-sm">{{ stats.total_images|number_format }}</div>
                <div class="stat-desc">Total images uploaded</div>
            </div>
        </div>

        <!-- Today's Activity -->
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-title">Today's Activity</div>
                <div class="stat-value text-sm">{{ stats.today_activity_count|number_format }}</div>
                <div class="stat-desc">{{ stats.active_api_keys|number_format }} active API keys</div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
            <h2 class="card-title">Quick Actions</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
                <a href="/cosmos/admin/products/new" class="btn btn-outline btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    New Product
                </a>
                <a href="/cosmos/admin/collections/new" class="btn btn-outline btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    New Collection
                </a>
                <a href="/cosmos/admin/categories" class="btn btn-outline btn-accent">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    Manage Categories
                </a>
                <a href="/cosmos/admin/users" class="btn btn-outline btn-info">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                    Manage Users
                </a>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="flex justify-between items-center">
                <h2 class="card-title">Recent Activity</h2>
                <a href="/cosmos/admin/activity" class="btn btn-sm btn-ghost">View All</a>
            </div>
            <div class="overflow-x-auto mt-4">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Action</th>
                            <th>Entity</th>
                            <th>Details</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if recent_activity is empty %}
                        <tr>
                            <td colspan="5" class="text-center py-8 text-base-content/60">
                                <div class="flex flex-col items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                    </svg>
                                    <p>No recent activity</p>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        {% for activity in recent_activity %}
                        <tr>
                            <td>
                                <div class="flex items-center space-x-3">
                                    <div class="avatar placeholder">
                                        <div class="bg-neutral-focus text-neutral-content rounded-full w-8">
                                            <span class="text-xs">{{ activity.username|slice(0, 2)|upper }}</span>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="font-bold">{{ activity.full_name|default(activity.username) }}</div>
                                        <div class="text-sm opacity-50">@{{ activity.username }}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if activity.action == 'create' %}
                                <span class="badge badge-success badge-sm">Created</span>
                                {% elseif activity.action == 'update' %}
                                <span class="badge badge-info badge-sm">Updated</span>
                                {% elseif activity.action == 'delete' %}
                                <span class="badge badge-error badge-sm">Deleted</span>
                                {% else %}
                                <span class="badge badge-sm">{{ activity.action|capitalize }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge badge-outline badge-sm">{{ activity.entity_type|default('Unknown') }}</span>
                            </td>
                            <td>
                                <div class="text-sm">
                                    {% if activity.entity_id %}
                                    <span class="font-mono text-xs opacity-70">#{{ activity.entity_id }}</span>
                                    {% endif %}
                                    {% if activity.details %}
                                    <span class="opacity-70">{{ activity.details|slice(0, 50) }}{% if activity.details|length > 50 %}...{% endif %}</span>
                                    {% endif %}
                                </div>
                            </td>
                            <td>
                                <span class="text-sm opacity-70">{{ activity.created_at }}</span>
                            </td>
                        </tr>
                        {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

