{% extends 'admin/layout/base.html.twig' %}

{% block title %}API Keys{% endblock %}
{% block page_title %}API Keys{% endblock %}

{% block content %}
<div class="p-6">
    {% if success %}
    <div class="alert alert-success mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{{ success }}</span>
    </div>
    {% endif %}

    {% if new_key %}
    <div class="alert alert-warning mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
            <div class="font-bold">Save this API key - it won't be shown again!</div>
            <div class="font-mono text-sm mt-2 p-2 bg-base-200 rounded">{{ new_key }}</div>
        </div>
    </div>
    {% endif %}

    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-2xl font-bold">API Keys</h2>
            <p class="text-sm text-base-content/60">Manage API access keys</p>
        </div>
        <a href="/cosmos/admin/api-keys/new" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Generate API Key
        </a>
    </div>

    <div class="card bg-base-100 shadow-md">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Key Prefix</th>
                            <th>Requests</th>
                            <th>Last Used</th>
                            <th>Expires</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if api_keys is empty %}
                        <tr>
                            <td colspan="6" class="text-center py-8 text-base-content/60">
                                No API keys found. <a href="/cosmos/admin/api-keys/new" class="link link-primary">Generate your first API key</a>
                            </td>
                        </tr>
                        {% else %}
                        {% for key in api_keys %}
                        <tr>
                            <td>{{ key.name }}</td>
                            <td><code class="text-xs">{{ key.key_prefix }}...</code></td>
                            <td>{{ key.total_requests ?? 0 }}</td>
                            <td>{{ key.last_used_at ?? 'Never' }}</td>
                            <td>
                                {% if key.is_expired %}
                                <span class="badge badge-error badge-sm">Expired</span>
                                {% elseif key.expires_at %}
                                {{ key.days_until_expiry }} days
                                {% else %}
                                Never
                                {% endif %}
                            </td>
                            <td>
                                <form method="POST" action="/cosmos/admin/api-keys/{{ key.id }}/delete" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-ghost text-error">Revoke</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

