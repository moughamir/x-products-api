{
  "name": "moritotabi/cosmos-api",
  "description": "A RESTful API for Shopify products.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Mori",
      "email": "mori@untitled.com"
    }
  ],
  "version": "1.0.0",
  "require": {
    "ext-pdo_sqlite": "*",
    "guzzlehttp/guzzle": "^7.10",
    "nyholm/psr7-server": "^1.1",
    "nyholm/psr7": "^1.8",
    "php-di/php-di": "^7.1",
    "salsify/json-streaming-parser": "^8.3",
    "slim/slim": "^4.15",
    "slim/twig-view": "^3.3",
    "zircote/swagger-php": "^4.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "@clear-cache"
    ],
    "post-install-cmd": [
      "@clear-cache"
    ],
    "post-autoload-dump": [
      "@clear-cache"
    ],
    "process:products": "php bin/tackle.php",
    "docs:generate": "vendor/bin/openapi --output openapi.json src/",
    "clear-cache": "php clear_opcache.php"
  }
}
