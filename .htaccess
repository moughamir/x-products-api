# .htaccess (Place this in the /cosmos directory)

RewriteEngine On

# Ensure Authorization headers (for API Key) are passed to PHP

RewriteCond %{HTTP:Authorization} .
RewriteRule .\* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# If the request is not for a real file or directory, route it to index.php

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
